@model List<UserViewModel>

<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">First Name</th>
            <th scope="col">Last Name</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (UserViewModel user in Model)
        {
            <tr>
                <th scope="row">@user.Id</th>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td><a asp asp-controller="User" asp-action="Details" asp-route-id="@user.Id" class="btn btn-primary">Detali</a></td>
            </tr>
        }
    </tbody>
</table>